sudo bash -c "cat << EOF > /etc/dnsmasq.conf
# Disable DNS server
port=0

# Run as proxy DHCP server for PXE
dhcp-range=<DHCP_SERVER_IP>,proxy,<DHCP_SERVER_SUBNET_MASK>

# Because I am running dnsmasq as a proxy DHCP server, I need to use the pxe-prompt and pxe-service instead of dhcp-boot
pxe-prompt=\"Hello, welcome to netboot with PXE\", 5
pxe-service=x86PC, \"dnsmasq: Install Linux (x86PC)\", tftpboot/pxelinux
pxe-service=x86PC, \"dnsmasq: Install Linux (x86-64_EFI)\", tftpboot/ldlinux.e64

EOF"
